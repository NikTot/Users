@model SAU.DTO.JQLFilterDTO

<div class="modal-body">

    @using (Ajax.BeginForm("Edit", "JQL",
            new AjaxOptions() { HttpMethod = "POST", OnSuccess = "$('#modalDialog').modal('hide')" },
            new { id = "validatedFormId" }))
    {
        @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <p class="h4 text-center py-4">Редактирование jql-фильтра</p>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.SystemId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SystemId, ViewBag.Systems as SelectList)                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.JqlString, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @* @Html.EditorFor(model => model.JqlString, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.TextAreaFor(model => model.JqlString, new { @class = "form-control", rows = "10" })
                @Html.ValidationMessageFor(model => model.JqlString, "", new { @class = "text-danger" })
            </div>
        </div>


        @Html.HiddenFor(model => model.Hidden)

        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <input type="reset" value="Отменить" class="btn btn-default" data-dismiss="modal" />
            </div>
        </div>
    </div>
    }

</div>

