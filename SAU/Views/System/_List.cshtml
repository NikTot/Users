@model IEnumerable<SAU.DTO.SystemDTO>

@{
    Layout = null;
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="control-buttons">
                <button class="btn btn-default modal-button" data-url='@Url.Action("Edit", new {id = item.Id})'>Редактировать</button>
                <button class="btn btn-default modal-button" data-url='@Url.Action("Users", new {id = item.Id})'>Пользователи</button>
                <button class="btn btn-default modal-button" data-url='@Url.Action("Delete", new {id = item.Id})'>Скрыть</button>
            </td>
        </tr>
    }
</table>


